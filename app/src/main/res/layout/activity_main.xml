<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dan14z.droidbountyhunterbindservice.MainActivity">


    <Button
        android:id="@+id/btn_fugitivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_fugitivos"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/btn_conexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ipc"
        android:layout_below="@id/btn_fugitivos"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_conexion"
        android:layout_centerHorizontal="true"
        android:text="@string/progress"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/progress_text"/>

</RelativeLayout>
